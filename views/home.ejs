<h1>SocialAPP / <%= title %>
</h1>

<section id="feed-post">
       <h4>POST</h4>
       <%if(locals.user){%>
       <form action="/posts/create" method="post">

              <textarea name="content" id="" cols="30" rows="3" placeholder="type here"></textarea>
              <input type="submit" value="post">
       </form>
       <%}%>
       <div id="posts-lists-container">
              <ul>
                     <%for(post of posts){%>
                            <li>
                                   <p>
                                          <%= post.content%>
                                                 <br>
                                                 <small>
                                                        <%= post.user.name%>
                                                 </small>
                                   </p>
                            </li>
                            <%}%>
              </ul>
       </div>
</section>